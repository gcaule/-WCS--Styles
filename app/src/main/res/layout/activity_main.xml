<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Main"
    tools:context="fr.wcs.stylealive.MainActivity">

    <LinearLayout style="@style/MainContent">

        <LinearLayout style="@style/TitleContainer">

            <ImageView style="@style/TitleImage" />

            <TextView style="@style/TitleText"
                      android:text="@string/title" />
        </LinearLayout>

        <TextView style="@style/Text.Description"
            android:text="@string/description" />

        <TextView style="@style/Subtitle"
            android:text="@string/subtitle1" />

        <TextView style="@style/Text"
            android:text="@string/text1" />

        <TextView style="@style/Subtitle"
            android:text="@string/subtitle2" />

        <TextView style="@style/Text"
            android:text="@string/text2" />

        <TextView style="@style/TitleText.Conclusion"
            android:text="@string/conclusion" />

        <TextView style="@style/Text.Description.ConclusionText"
            android:text="@string/conclusion_text" />

    </LinearLayout>
</ScrollView>
